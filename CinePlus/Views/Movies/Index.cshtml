@model IEnumerable<CinePlus.Movy>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                <img src="@Html.DisplayFor(modelItem => item.Image)" class="card-img-top" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <a class="card-text fs-3 text-reset underline-none">@Html.DisplayFor(modelItem => item.Title)</a>
                    <div class="mr-3">
                        <p style="height:100px; overflow: auto">
                            @Html.DisplayFor(modelItem => item.Synopsis)
                        </p>
                        <p class="text-muted mb-0">Director: <strong>@Html.DisplayFor(modelItem => item.DirectorName)</strong></p>
                        <p class="text-muted mb-0">Género: <strong>@Html.DisplayFor(modelItem => item.Category)</strong></p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="rating">
                            <input type="radio" id="star1" name="rating" value="1" />
                            <label for="star1" title="1 estrella"></label>
                            <input type="radio" id="star2" name="rating" value="2" />
                            <label for="star2" title="2 estrellas"></label>
                            <input type="radio" id="star3" name="rating" value="3" />
                            <label for="star3" title="3 estrellas"></label>
                            <input type="radio" id="star4" name="rating" value="4" />
                            <label for="star4" title="4 estrellas"></label>
                            <input type="radio" id="star5" name="rating" value="5" />
                            <label for="star5" title="5 estrellas"></label>
                        </div>
                        @*<div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" href="pages/ratings.html">Ver rating</a>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    }
</div>
